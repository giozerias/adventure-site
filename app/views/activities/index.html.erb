<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<% @pictures_hash.each do |k,v| %>
  <p>
    <%= image_tag v, alt: k %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Cost</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
        <td><%= activity.name %></td>
        <td><%= activity.cost %></td>
        <td><%= activity.duration %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path %>

<%= link_to "Red", activities_path(color: "red"), class: "btn btn-danger" %>
<%= link_to "Blue", activities_path(color: "blue"), class: "btn btn-primary" %>
<%= link_to "Purple", activities_path(color: "purple"), class: "btn btn-purple" %>
<%= link_to "Orange", activities_path(color: "orange"), class: "btn btn-orange" %>
